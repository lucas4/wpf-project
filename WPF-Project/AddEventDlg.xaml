<Window x:Class="WPF_Project.AddEventDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Project"
        mc:Ignorable="d"
        Icon="Assets/calendar_icon.ico"
        WindowStartupLocation="CenterScreen"
        Title="Dodaj wydarzenie" Width="341" SizeToContent="Height" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Margin="3" Grid.Row="0">Data</Label>

        <Label Margin="3" Grid.Row="2">Nazwa</Label>
        <Label Margin="3" Grid.Row="3">Opis</Label>
        <TextBlock x:Name="DateTextBlock" Margin="3" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" />
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Margin="3">Godzina</Label>
            <TextBox x:Name="HourTextBox" Margin="3" Grid.Column="1" VerticalAlignment="Center" Text="{Binding Hour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                <!--<Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel>
                            <AdornedElementPlaceholder x:Name="HourTextBox"/>
                            <TextBlock Text="{Binding ErrorContent}" Foreground="Red"/>
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>-->
            </TextBox>
            <Label Margin="3" Grid.Column="2">Minuta</Label>
            <TextBox x:Name="MinuteTextBox" Margin="3" Grid.Column="3" VerticalAlignment="Center" Text="{Binding Minute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                <!--<Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel>
                            <AdornedElementPlaceholder x:Name="HourTextBox"/>
                            <TextBlock Text="{Binding ErrorContent}" Foreground="Red"/>
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>-->
            </TextBox>
        </Grid>

        <TextBox x:Name="TitleTextBox" Margin="3" Grid.Column="1" Grid.Row="2" VerticalContentAlignment="Center" Text="{Binding Title}" />
        <TextBox x:Name="DescriptionTextBox" Margin="3" Grid.Column="1" Grid.Row="3" VerticalContentAlignment="Center" Text="{Binding Description}"/>
        <Grid HorizontalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="4" Grid.IsSharedSizeScope="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="pierwsza" />
                <ColumnDefinition SharedSizeGroup="pierwsza" />
            </Grid.ColumnDefinitions>
            <Button Margin="3" Padding="20, 5" IsDefault="True" x:Name="TrueButton" Click="TrueButton_Click">Ok</Button>
            <Button Margin="3" Padding="20, 5" IsCancel="True" x:Name="CancelButton" Click="CancelButton_Click" Grid.Column="1">Anuluj</Button>
        </Grid>
    </Grid>
</Window>

